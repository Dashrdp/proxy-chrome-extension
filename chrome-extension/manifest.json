{
  "manifest_version": 3,
  "name": "DashRDP Proxy Configurator",
  "version": "1.0",
  "description": "Advanced proxy configuration tool for DashRDP environments - Extract and configure proxy settings",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DashRDP Proxy Configurator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["python_script.py"],
      "matches": ["<all_urls>"]
    }
  ]
}
